.mod-todo-list {
	width: 62.8%;
	margin: 10px auto;
}


.mod-todo-list input {
	border: none;
	font-size: 14px;
	border-bottom: 1px solid #F1EFEF;
	width: 100%;
	display: block;
	line-height: 40px;
	outline: none;	
	margin-bottom: 20px;
}

.mod-todo-list ul {
	list-style: none;
	margin: 0;
	padding: 0;
	margin-bottom: 20px;
}

.mod-todo-list ul li {
	color: #666;
	height: 40px;
	line-height: 40px;
	border-bottom: 1px solid #F1EFEF;
	position: relative;
}


.mod-todo-list ul li p {
	position: absolute;
	right: 10px;
	top: 10px;
	height: 20px;
	width: 20px;
	margin: 0;
	padding: 0;
	line-height: 20px;
	text-align: center;
	cursor: pointer;
}

.mod-todo-list ul li.done {
	text-decoration: line-through;
	color: #999;
}

.mod-todo-list ul li p.status {
	border-radius: 2px;
	right: 50px;
	background: #fff;
	border: 1px solid #999;
}

.mod-todo-list ul li p.status.done {
	background: #00C500;
	border: 1px solid #00C500;
}

.mod-todo-list ul li p.btn-remove {
	display: none;
}
.mod-todo-list ul li:hover {
	p.btn-remove {
		display: block;
	}
}
.mod-todo-list ul li p.btn-remove:hover {
	transform: scale3d(1.1, 1.1, 1);
}